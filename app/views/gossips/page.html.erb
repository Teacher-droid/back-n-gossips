<div class="card card-gossip">
  <div class="card-header">
    <H2><%= @gossip.title %></h2>
  </div>
  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <p><%= @gossip.content %></p>
      <footer class="blockquote-footer">Cet article a été écrit par "<%= @gossip.user.first_name %> : <%= link_to "plus d'infos sur l'auteur", user_path(user: => @user.id) %>"</footer>
    </blockquote>
  </div>
</div>